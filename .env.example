# ====================
# APPLICATION
# ====================

# Application URL (used for redirects, emails, etc.)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Node Environment
NODE_ENV=development

# ====================
# SUPABASE
# ====================

# Your Supabase project URL
# Get from: https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here

# Your Supabase anon/public key
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Your Supabase service role key (keep this secret!)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ====================
# SOCIAL MEDIA - INSTAGRAM
# ====================

# Instagram App credentials (from Meta for Developers)
# Get from: https://developers.facebook.com/apps/
INSTAGRAM_CLIENT_ID=your_instagram_app_id_here
INSTAGRAM_CLIENT_SECRET=your_instagram_app_secret_here

# Instagram API configuration
INSTAGRAM_APP_ID=your_instagram_app_id_here
INSTAGRAM_APP_SECRET=your_instagram_app_secret_here
INSTAGRAM_REDIRECT_URI=http://localhost:3000/api/auth/callback/instagram

# ====================
# SOCIAL MEDIA - FACEBOOK
# ====================

# Facebook App credentials (from Meta for Developers)
# Get from: https://developers.facebook.com/apps/
FACEBOOK_CLIENT_ID=your_facebook_app_id_here
FACEBOOK_CLIENT_SECRET=your_facebook_app_secret_here

# Facebook API configuration
FACEBOOK_APP_ID=your_facebook_app_id_here
FACEBOOK_APP_SECRET=your_facebook_app_secret_here
FACEBOOK_REDIRECT_URI=http://localhost:3000/api/auth/callback/facebook

# ====================
# SOCIAL MEDIA - LINKEDIN
# ====================

# LinkedIn App credentials (from LinkedIn Developers)
# Get from: https://www.linkedin.com/developers/apps
LINKEDIN_CLIENT_ID=your_linkedin_client_id_here
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret_here
LINKEDIN_REDIRECT_URI=http://localhost:3000/api/auth/callback/linkedin

# ====================
# SOCIAL MEDIA - TWITTER/X
# ====================

# Twitter API credentials (from Twitter Developer Portal)
# Get from: https://developer.twitter.com/en/portal/dashboard
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here

# Twitter OAuth 2.0
TWITTER_CLIENT_ID=your_twitter_client_id_here
TWITTER_CLIENT_SECRET=your_twitter_client_secret_here
TWITTER_REDIRECT_URI=http://localhost:3000/api/auth/callback/twitter

# ====================
# EMAIL - RESEND
# ====================

# Resend API Key (for sending emails)
# Get from: https://resend.com/api-keys
RESEND_API_KEY=re_your_resend_api_key_here

# Email sender (must be verified domain in Resend)
EMAIL_FROM=SocialFlow <notifications@yourdomain.com>

# ====================
# CRON JOBS
# ====================

# Secret for securing cron job endpoints
# Generate with: openssl rand -base64 32
CRON_SECRET=your_secure_random_string_here

# ====================
# AI - OPENAI (Optional)
# ====================

# OpenAI API Key (for AI content generation, caption writing, etc.)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# ====================
# PAYMENT - STRIPE (Optional)
# ====================

# Stripe API Keys (for subscription billing)
# Get from: https://dashboard.stripe.com/apikeys
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here
STRIPE_SECRET_KEY=your_stripe_secret_key_here

# Stripe Webhook Secret (for handling webhook events)
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here

# ====================
# STORAGE - AWS S3 (Optional)
# ====================

# AWS credentials for media storage
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_S3_BUCKET=your_bucket_name
# AWS_REGION=us-east-1

# ====================
# STORAGE - CLOUDINARY (Optional Alternative)
# ====================

# Cloudinary credentials for media storage
# Get from: https://cloudinary.com/console
# CLOUDINARY_CLOUD_NAME=your_cloud_name
# CLOUDINARY_API_KEY=your_api_key
# CLOUDINARY_API_SECRET=your_api_secret

# ====================
# ANALYTICS (Optional)
# ====================

# Google Analytics
# NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Mixpanel
# NEXT_PUBLIC_MIXPANEL_TOKEN=your_mixpanel_token

# PostHog
# NEXT_PUBLIC_POSTHOG_KEY=your_posthog_key
# NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# ====================
# ERROR TRACKING - SENTRY (Optional)
# ====================

# Sentry DSN for error tracking
# Get from: https://sentry.io/settings/projects/
# SENTRY_DSN=your_sentry_dsn
# NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn
# SENTRY_AUTH_TOKEN=your_sentry_auth_token

# ====================
# SECURITY & RATE LIMITING
# ====================

# Rate limiting configuration
# RATE_LIMIT_MAX_REQUESTS=100
# RATE_LIMIT_WINDOW_MS=60000

# JWT Secret (if using custom JWT)
# JWT_SECRET=your_jwt_secret_here

# ====================
# DEVELOPMENT & DEBUGGING
# ====================

# Enable debug mode for verbose logging
# DEBUG=false

# Disable telemetry
# NEXT_TELEMETRY_DISABLED=1

# ====================
# PRODUCTION ONLY
# ====================

# These should only be set in production
# NEXT_PUBLIC_APP_URL=https://yourdomain.com
# NODE_ENV=production
